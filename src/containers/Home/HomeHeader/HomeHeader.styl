@import '../../../assets/css/mixins.styl'
.header
  height px2rem(56)
  display flex
  padding px2rem(16) px2rem(30)
  align-items center
  .logo
    width px2rem(140)
    height px2rem(40)
    background-image url('../../../assets/images/icons.png')
    background-position px2rem(-4) px2rem(236)
    background-size 108%
    margin-right px2rem(20)
    display inline-block
  .search
    flex-grow 1
    display flex
    flex-flow row nowrap
    align-items center
    justify-content center
    width px2rem(532)
    height px2rem(56)
    background-color #ededed
    border-radius 6px
    i
      display inline-block
      width px2rem(28)
      height px2rem(28)
      font-size px2rem(30)
      margin-right px2rem(6px)
    span
      color #666666
      font-size px2rem(26)

