@import '../../assets/css/mixins.styl'
.navBarContainer
  width 100%
  height px2rem(100)
  background-color: #f5f5f5;
  position fixed
  bottom 0
  overflow hidden
  .navbar
    width 100%
    height px2rem(100)
    display flex
    justify-content space-around
    align-items center
    .navbar-item
      width px2rem(80)
      display flex
      flex-direction column
      text-align: center;
      &.on
        .iconfont,.title
          color #b4282d !important
      .item_icon
        .iconfont
          font-size px2rem(48)
          color black
      .title
        font-size px2rem(24)
        margin-top px2rem(10)
        color black

